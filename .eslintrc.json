{
  "env": {
    "es2021": true,
    "jest/globals": true,
    "node": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["jest"],
  "rules": {
    "curly": "error",
    "no-implicit-coercion": "error",
    "no-negated-condition": "error",
    "no-nested-ternary": "error",
    "no-useless-concat": "error",
    "prefer-template": "error",
    "sort-keys": "error"
  }
}
