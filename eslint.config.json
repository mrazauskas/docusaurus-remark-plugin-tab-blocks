{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:mocha/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "mocha"
  ],
  "rules": {
    "curly": "error",
    "no-implicit-coercion": "error",
    "no-negated-condition": "error",
    "no-nested-ternary": "error",
    "no-useless-concat": "error",
    "prefer-template": "error",
    "sort-keys": "error"
  }
}
